<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Inicio">

    <ImageView
        android:id="@+id/ivCambios"
        android:layout_width="85dp"
        android:layout_height="193dp"
        android:layout_alignEnd="@+id/ivRecetas"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:background="#513104"/>

    <ImageView
        android:id="@+id/linea1"
        android:layout_width="130dp"
        android:layout_height="137dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/linea1"
        android:layout_width="233dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linea2"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/linea" />

    <ImageView
        android:id="@+id/linea2"
        android:layout_width="370dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/linea" />

    <ImageView
        android:id="@+id/ivRecetas"
        android:layout_width="328dp"
        android:layout_height="152dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="#513104" />

    <ImageView
        android:id="@+id/ivAgregar"
        android:layout_width="85dp"
        android:layout_height="194dp"
        android:layout_alignBottom="@+id/ivIdeas"
        android:layout_alignStart="@+id/ivRecetas"
        android:background="#513104" />

    <ImageView
        android:id="@+id/ivIdeas"
        android:layout_width="86dp"
        android:layout_height="193dp"
        android:layout_alignTop="@+id/ivCambios"
        android:layout_centerHorizontal="true"
        android:background="#513104"/>

    <ImageButton
        android:id="@+id/ibtRecetas"
        android:layout_width="315dp"
        android:layout_height="135dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        app:srcCompat="@drawable/wings"
        android:onClick="recetas"/>

    <ImageButton
        android:id="@+id/ibtAgregar"
        android:layout_width="73dp"
        android:layout_height="180dp"
        android:layout_alignBottom="@+id/ivCambios"
        android:layout_alignStart="@+id/ivRecetas"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        android:onClick="agregar"
        app:srcCompat="@drawable/salad" />

    <ImageButton
        android:id="@+id/ibtIdeas"
        android:layout_width="73dp"
        android:layout_height="179dp"
        android:layout_alignTop="@+id/ibtAgregar"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/pastel"
        android:onClick="ideas"/>

    <ImageButton
        android:id="@+id/ibtCambios"
        android:layout_width="72dp"
        android:layout_height="178dp"
        android:layout_alignEnd="@+id/ivRecetas"
        android:layout_alignTop="@+id/ibtAgregar"
        android:layout_marginEnd="6dp"
        app:srcCompat="@drawable/salpicon"
        android:onClick="cambios"/>

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivRecetas"
        android:layout_marginTop="84dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#513104"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivAgregar"
        android:layout_marginStart="44dp"
        android:text="Agregar"
        android:textColor="#513104"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvIdeas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAgregar"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Ideas"
        android:textColor="#513104"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCambios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivAgregar"
        android:layout_marginEnd="42dp"
        android:text="Cambios"
        android:textColor="#513104"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRecetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivRecetas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-58dp"
        android:text="Mis recetas"
        android:textColor="#513104"
        android:textStyle="bold" />

</RelativeLayout>